html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(rel="stylesheet" href = "./styles/aboutUs.css")
        title=title
        block head
    body
        img.logo(src="images/NABI.png")
        div.container
            nav.navigation-bar
                a(href='/') Home
                a#donate(href='/donation') DONATE
                a(href="/aboutus") About Us
                a(href='takeAction') Take Action
                a(href='freshStart') Fresh Start
                a(href='/contactUs') Contact Us
