html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(rel="stylesheet" href = "./styles/donations.css")
        title=title
        block head
    body
        img.logo(src="images/NABI.png")
        div.container
            nav.navigation-bar
                a(href='/') Home
                a#donate(href='/donation') DONATE
                a(href="/aboutus") About Us
                a(href='takeAction') Take Action
                a(href='/freshStart') Fresh Start
                a(href='/contactUs') Contact Us
                if session.user && session.user.isAuthenticated
                    a(href='/account') Dashboard
                    a(href="/account/logout") Logout
                else
                    a(href='/account/login') Login
        block content
            body
            div.interior
                div.box1
                div.box2 
                  div.inside
                    form(action='https://www.paypal.com/cgi-bin/webscr', method='post', class = "card" , target='_top')
                        input(type='hidden', name='cmd', value='_s-xclick')
                        input(type='hidden', name='hosted_button_id', value='ZDELES2SZZSSE')
                        input(type='image', src='https://www.paypalobjects.com/en_US/i/btn/btn_donateCC_LG.gif', border='0',        name='submit', title='PayPal - The safer, easier way to pay online!', alt='Donate with PayPal button')
                        img(alt='', border='0', src='https://www.paypal.com/en_US/i/scr/pixel.gif', width='1', height='1') 
                div.box3
                div.box4
              


